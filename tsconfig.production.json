{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "outFile": "./dist/dist.js",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "./src/",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}